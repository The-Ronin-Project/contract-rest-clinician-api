{
    "openapi": "3.0.2",
    "info": {
        "title": "Clinician API",
        "description": "The Clinician API service contract",
        "contact": {
            "name": "Jesse Corbett",
            "email": "jesse@projectronin.com",
            "url": "https://github.com/projectronin/prodeng-clinician-api"
        },
        "version": "1.1.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "tags": [
        {
            "name": "diagnosis",
            "description": "Relating to cancer diagnosis"
        },
        {
            "name": "patient",
            "description": "Relating to patients"
        }
    ],
    "paths": {
        "/cancer-diagnosis/{patientId}": {
            "get": {
                "tags": [
                    "diagnosis"
                ],
                "summary": "Find cancer diagnosis by patient ID",
                "description": "Returns a single pet",
                "operationId": "getCancerDiagnosesByPatient",
                "parameters": [
                    {
                        "name": "patientId",
                        "in": "path",
                        "description": "ID of patient to query by",
                        "required": true,
                        "schema": {
                            "$ref": "schemas/simple-types.json#/components/schemas/PatientId"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "schemas/cancer-diagnosis.json#/components/schemas/CancerDiagnosis"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Patient not found"
                    }
                },
                "security": [
                    {
                        "seki": []
                    }
                ]
            }
        },
        "/patients": {
            "get": {
                "tags": [
                    "patient"
                ],
                "summary": "Search for patients by name or mrn",
                "description": "Returns list of patients matching the search criteria",
                "operationId": "searchForPatients",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "schemas/patient.json#/components/schemas/Patient"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "seki": []
                    }
                ]
            }
        },
        "/patients/{patientId}/appointments": {
            "get": {
                "tags": [
                    "patient"
                ],
                "summary": "Get a list of appointments for a patient",
                "description": "Returns list of appointments related to the identified patient",
                "operationId": "getAppointmentsForPatient",
                "parameters": [
                    {
                        "name": "patientId",
                        "in": "path",
                        "description": "ID of patient to query by",
                        "required": true,
                        "schema": {
                            "$ref": "schemas/simple-types.json#/components/schemas/PatientId"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "schemas/appointment.json#/components/schemas/Appointment"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "seki": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "seki": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
